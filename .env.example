# Database Configuration
DATABASE_PATH=./data/database.db

# Authentication Token Configuration
# Name of the authentication token cookie
AUTH_TOKEN_COOKIE_NAME=auth_token
# Token duration in days (default: 7)
AUTH_TOKEN_DURATION_DAYS=7

# Security Configuration
# PBKDF2 iterations for password hashing (higher = more secure but slower)
# Recommended: 100000-600000 iterations
# Default: 100000
PASSWORD_HASH_ITERATIONS=100000

# CSRF Protection
# Length of CSRF tokens in bytes (16-64)
# Default: 32
CSRF_TOKEN_LENGTH=32

# Rate Limiting
# Rate limit window in milliseconds (60000-3600000 / 1-60 minutes)
# Default: 900000 (15 minutes)
RATE_LIMIT_WINDOW_MS=900000
# Maximum login attempts per window (1-100)
# Default: 5
RATE_LIMIT_MAX_LOGIN_ATTEMPTS=5
# Maximum API requests per window (10-10000)
# Default: 100
RATE_LIMIT_MAX_API_REQUESTS=100

# Request Size Limits (in bytes)
# Maximum request size for authentication endpoints (login, register)
# Default: 10240 (10 KB) - Sufficient for username + password
MAX_REQUEST_SIZE_AUTH=10240
# Maximum request size for config save operations
# Default: 102400 (100 KB) - Sufficient for JSON with image URLs
MAX_REQUEST_SIZE_CONFIG=102400
# Default maximum request size for all other endpoints
# Default: 1048576 (1 MB)
MAX_REQUEST_SIZE_DEFAULT=1048576

# Logging Configuration
# Log level: debug, info, warn, error, fatal
# Default: info (debug in development)
LOG_LEVEL=info
# Enable console logging (pretty-printed in dev, JSON in prod)
# Default: true
LOG_TO_CONSOLE=true
# Enable file logging (writes to logs/app.log)
# Default: true
LOG_TO_FILE=true

# Audit Logging Configuration
# Enable/disable audit log storage channels
# Database logging - stores audit events in SQLite for querying
# Default: true
AUDIT_LOG_TO_DATABASE=true
# File logging - appends audit events to logs/audit.log (tamper-resistant)
# Default: true
AUDIT_LOG_TO_FILE=true

# Proxy Trust Configuration
# SECURITY: Only enable when behind a trusted reverse proxy (nginx, Cloudflare, etc.)
# When false: X-Forwarded-For, X-Real-IP, and CF-Connecting-IP headers are IGNORED
# When true: These headers are trusted for client IP extraction
# Default: false (headers ignored to prevent IP spoofing attacks)
TRUST_PROXY=false

